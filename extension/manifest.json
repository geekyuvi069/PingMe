{
    "manifest_version": 3,
    "name": "PingMe Tracer",
    "version": "1.0",
    "description": "15-minute activity tracker for PingMe",
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "*://localhost/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "PingMe"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}